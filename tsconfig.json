{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "outDir": "dist",
        "alwaysStrict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": ["node_modules"]
}
